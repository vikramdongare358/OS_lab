#include<iostream>
#include<algorithm>
#include<queue>
using namespace std;

int main() {
    int n, quantum;
    cout << "Enter the number of processes: ";
    cin >> n;
    int arrival_time[n], burst_time[n], completion_time[n], turnaround_time[n], waiting_time[n], remaining_time[n];
    float avg_turnaround_time = 0, avg_waiting_time = 0;
    cout << "Enter the arrival time and burst time for each process:\n";
    for (int i = 0; i < n; i++) {
        cout << "Process " << i+1 << ":\n";
        cout << "Arrival time: ";
        cin >> arrival_time[i];
        cout << "Burst time: ";
        cin >> burst_time[i];
        remaining_time[i] = burst_time[i];
    }
    cout << "Enter the time quantum: ";
    cin >> quantum;
    int current_time = 0, completed = 0;
    queue<int> q;
    while (completed != n) {
        for (int i = 0; i < n; i++) {
            if (arrival_time[i] <= current_time && remaining_time[i] > 0) {
                q.push(i);
            }
        }
        if (q.empty()) {
            current_time++;
            continue;
        }
        int process = q.front();
        q.pop();
        if (remaining_time[process] > quantum) {
            remaining_time[process] -= quantum;
            current_time += quantum;
            q.push(process);
        } else {
            current_time += remaining_time[process];
            completion_time[process] = current_time;
            turnaround_time[process] = completion_time[process] - arrival_time[process];
            waiting_time[process] = turnaround_time[process] - burst_time[process];
            avg_turnaround_time += turnaround_time[process];
            avg_waiting_time += waiting_time[process];
            remaining_time[process] = 0;
            completed++;
        }
    }
    cout << "Process\t Arrival Time\t Burst Time\t Completion Time\t Turnaround Time\t Waiting Time\n";
    for (int i = 0; i < n; i++) {
        cout << i+1 << "\t\t" << arrival_time[i] << "\t\t" << burst_time[i] << "\t\t" << completion_time[i] << "\t\t" << turnaround_time[i] << "\t\t" << waiting_time[i] << "\n";
    }
    avg_turnaround_time /= n;
    avg_waiting_time /= n;
    cout << "Average Turnaround Time: " << avg_turnaround_time << "\n";
    cout << "Average Waiting Time: " << avg_waiting_time << "\n";
    return 0;
}
